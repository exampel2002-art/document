#include <stdio.h>

struct Process {
    int id, at, bt, ct, tat, wt;
    int completed;
};

int main() {
    int n, time = 0, completed = 0;
    float totalTAT = 0, totalWT = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];//creating object

    for (int i = 0; i < n; i++) {
        p[i].id = i + 1;
        printf("\nEnter Arrival Time and Burst Time for Process %d: ", i + 1);
        scanf("%d %d", &p[i].at, &p[i].bt);
        p[i].completed = 0;
    }

    printf("\nGantt Chart:\n");

    while (completed != n) {
        int idx = -1;
        int minBT = 9999;

        // Find process with minimum burst time among arrived and not completed ones
        for (int i = 0; i < n; i++) {
            if (p[i].at <= time && p[i].completed == 0 && p[i].bt < minBT) {
                minBT = p[i].bt;
                idx = i;
            }
        }

        if (idx != -1) {
            printf("| P%d (%d-%d) ", p[idx].id, time, time + p[idx].bt);

            time += p[idx].bt;          // CPU executes the process completely (non-preemptive)
            p[idx].ct = time;           // Completion time
            p[idx].tat = p[idx].ct - p[idx].at;  // Turnaround time
            p[idx].wt = p[idx].tat - p[idx].bt;  // Waiting time

            p[idx].completed = 1;
            completed++;

            totalTAT += p[idx].tat;
            totalWT += p[idx].wt;
        } else {
            // CPU idle if no process has arrived yet
            printf("| Idle (%d-%d) ", time, time + 1);
            time++;
        }
    }

    printf("|\n");

    printf("\nProcess\tAT\tBT\tCT\tTAT\tWT\n");
    for (int i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].id, p[i].at, p[i].bt, p[i].ct, p[i].tat, p[i].wt);
    }

    printf("\nAverage Turnaround Time: %.2f", totalTAT / n);
    printf("\nAverage Waiting Time: %.2f\n", totalWT / n);

    return 0;
}
