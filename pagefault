#include <stdio.h>

void fifo(int pages[], int n, int capacity) {
    int frame[10], front = 0, rear = 0, count = 0, pageFaults = 0;
    int i, j, flag;

    for (i = 0; i < capacity; i++)
        frame[i] = -1;

    printf("\nFIFO Page Replacement:\n");

    for (i = 0; i < n; i++) {
        flag = 0;

        // Check if page already exists in frame
        for (j = 0; j < capacity; j++) {
            if (frame[j] == pages[i]) {
                flag = 1;
                break;
            }
        }

        if (flag == 0) {
            frame[rear] = pages[i];
            rear = (rear + 1) % capacity;
            pageFaults++;
        }

        printf("Page %d -> ", pages[i]);
        for (j = 0; j < capacity; j++) {
            if (frame[j] != -1)
                printf("%d ", frame[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("Total Page Faults (FIFO): %d\n", pageFaults);
}

void lru(int pages[], int n, int capacity) {
    int frame[10], counter[10];
    int i, j, k, pageFaults = 0, flag1, flag2, pos, least;

    for (i = 0; i < capacity; i++) {
        frame[i] = -1;
        counter[i] = 0;
    }

    printf("\nLRU Page Replacement:\n");

    for (i = 0; i < n; i++) {
        flag1 = flag2 = 0;

        // Check if page already exists
        for (j = 0; j < capacity; j++) {
            if (frame[j] == pages[i]) {
                counter[j] = i + 1;  // update counter
                flag1 = flag2 = 1;
                break;
            }
        }

        if (flag1 == 0) {
            for (j = 0; j < capacity; j++) {
                if (frame[j] == -1) {
                    frame[j] = pages[i];
                    counter[j] = i + 1;
                    flag2 = 1;
                    pageFaults++;
                    break;
                }
            }
        }

        if (flag2 == 0) {
            least = counter[0];
            pos = 0;
            for (j = 1; j < capacity; j++) {
                if (counter[j] < least) {
                    least = counter[j];
                    pos = j;
                }
            }
            frame[pos] = pages[i];
            counter[pos] = i + 1;
            pageFaults++;
        }

        printf("Page %d -> ", pages[i]);
        for (k = 0; k < capacity; k++) {
            if (frame[k] != -1)
                printf("%d ", frame[k]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("Total Page Faults (LRU): %d\n", pageFaults);
}

int main() {
    int pages[30], n, capacity, i;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter the page reference string:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &capacity);

    fifo(pages, n, capacity);
    lru(pages, n, capacity);

    return 0;
}
