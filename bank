import java.util.Scanner;
class BankAccount{
    int accountNo;
    String customerName;
    double balance;

BankAccount(int accNo,String name,double bal){
    accountNo=accNo;
    customerName=name;
    balance=bal;
}
void deposit(double amount){
    balance+=amount;
    System.out.println("Amount is successfully deposited");
}
void withdraw(double amount){
    if(amount<=balance){
        balance=balance-amount;
        System.out.println("Money withdraw successful");
    }
    else{
        System.out.println("Not enough balance");
    }
}
void checkBalance(){
    System.out.println("Current balance: Rs."+balance);
}
void display(){
    System.out.println(accountNo+"-"+customerName+"-Rs."+balance);
}
}
public class Main{
    public static void main(String[] args){
        Scanner item=new Scanner(System.in);
        BankAccount[] accounts=new BankAccount[100];
        int count=0;
        
        while(true){
            System.out.println("1.Add account\n2.Display Accounts\n3.Deposit\n4.Withdraw\n5.CheckBalance\n6.Display account in descending order as per balance\n7.Exit");
            System.out.println("Enter your choice: ");
            int choice=item.nextInt();
            
            if (choice==1){
                System.out.println("Enter your Account No.:");
                int accNo=item.nextInt();
                item.nextLine();
                System.out.println("Enter your name: ");
                String name=item.nextLine();
                System.out.println("Enter the initial balance: ");
                double bal=item.nextDouble();
                accounts[count++]=new BankAccount(accNo,name,bal);
                System.out.println("Your Account is successfully added");
            }else if(choice==2){
                for(int i=0;i<count;i++){
                    accounts[i].display();
                }
            }else if(choice==3){
                System.out.println("Enter your Account No.: ");
                int accNo=item.nextInt();
                System.out.println("Enter the amount to deposit: ");
                double amount=item.nextDouble();
                for(int i=0;i<count;i++){
                    if(accounts[i].accountNo==accNo){
                        accounts[i].deposit(amount);
                        break;
                    }
                }
            }
                else if(choice==4){
                    System.out.println("Enter your Account No.:");
                    int accNo=item.nextInt();
                    System.out.println("enter the withdrawal amount: ");
                    double amount=item.nextDouble();
                    for(int i=0;i<count;i++){
                        if(accounts[i].accountNo==accNo){
                            accounts[i].withdraw(amount);
                            break;
                        }
                    }
                }
                else if(choice==5){
                    System.out.println("Enter your Account No.: ");
                    int accNo=item.nextInt();
                    for(int i=0;i<count;i++){
                        if(accounts[i].accountNo==accNo){
                            accounts[i].checkBalance();
                            break;
                        }
                    }
                }
                else if(choice==6){
                    for(int i=0;i<count-1;i++){
                        for (int j=0;j<count-i-1;j++){
                            if(accounts[j].balance<accounts[j+1].balance){
                                BankAccount temp=accounts[j];
                                accounts[j]=accounts[j+1];
                                accounts[j+1]=temp;
                            }
                        }
                    }
                    System.out.println("Accounts as per their balance in descending order: ");
                    for(int i=0;i<count;i++){
                        accounts[i].display();
                    }
                }
                else if(choice==7){
                    System.out.println("Exiting");
                    break;
                }
                    else{
                        System.out.println("Enter a valid choice.");
                        break;
                    }
                }
                item.close();
            }
}
