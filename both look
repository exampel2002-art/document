#include <stdio.h>
#include <stdlib.h>

void sort(int arr[], int n) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

void LOOK(int requests[], int n, int head, int direction) {
    int i, j, total = 0;
    int index;

    sort(requests, n);

    for (i = 0; i < n; i++) {
        if (head < requests[i]) {
            index = i;
            break;
        }
    }

    printf("\nLOOK Disk Scheduling Order: ");
    if (direction == 1) { // right
        for (i = index; i < n; i++) {
            printf("%d ", requests[i]);
            total += abs(head - requests[i]);
            head = requests[i];
        }
        for (i = index - 1; i >= 0; i--) {
            printf("%d ", requests[i]);
            total += abs(head - requests[i]);
            head = requests[i];
        }
    } else { // left
        for (i = index - 1; i >= 0; i--) {
            printf("%d ", requests[i]);
            total += abs(head - requests[i]);
            head = requests[i];
        }
        for (i = index; i < n; i++) {
            printf("%d ", requests[i]);
            total += abs(head - requests[i]);
            head = requests[i];
        }
    }

    printf("\nTotal Head Movement (LOOK): %d\n", total);
}

void CLOOK(int requests[], int n, int head, int direction) {
    int i, j, total = 0;
    int index;

    sort(requests, n);

    for (i = 0; i < n; i++) {
        if (head < requests[i]) {
            index = i;
            break;
        }
    }

    printf("\nC-LOOK Disk Scheduling Order: ");
    if (direction == 1) { // right
        for (i = index; i < n; i++) {
            printf("%d ", requests[i]);
            total += abs(head - requests[i]);
            head = requests[i];
        }
        total += abs(head - requests[0]); // jump head = requests[0]
        for (i = 0; i < index; i++) {
            printf("%d ", requests[i]);
            total += abs(head - requests[i]);
            head = requests[i];
        }
    } else { // left
        for (i = index - 1; i >= 0; i--) {
            printf("%d ", requests[i]);
            total += abs(head - requests[i]);
            head = requests[i];
        }
        total += abs(head - requests[n - 1]); // jump head = requests[n-1]
        for (i = n - 1; i >= index; i--) {
            printf("%d ", requests[i]);
            total += abs(head - requests[i]);
            head = requests[i];
        }
    }

    printf("\nTotal Head Movement (C-LOOK): %d\n", total);
}

int main() {
    int n, head, direction;
    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    int requests[n];
    printf("Enter the disk requests: ");
    for (int i = 0; i < n; i++) {
        scanf("%d", &requests[i]);
    }

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter direction (1 for right, 0 for left): ");
    scanf("%d", &direction);

    LOOK(requests, n, head, direction);
    CLOOK(requests, n, head, direction);

    return 0;
}
